<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <title>Document</title>
</head>

<body>
    <div class="container-fluid vh-100">
        <div class="row flex-nowrap h-100">
            <div class="col-auto col-2 bg-dark">
                <div class="h-100">
                    <h1 class="text-white">Movies DB</h1>
                    <nav class="nav flex-column">
                        <% if(currentUser){ %>
                            <a href="#" class="text-white text-decoration-none" data-bs-toggle="modal" data-bs-target="#createMovie">Create Movie</a>
                            <a href="/auth/logout" class="text-white text-decoration-none">Logout</a>
                            <% }else{ %>
                                <a href="/auth/register" class="text-white text-decoration-none">Register</a>
                                <a href="/auth/login" class="text-white text-decoration-none">Login</a>
                                <% } %>
                    </nav>
                </div>
            </div>
            <div class="col">
            <div>
                <% if(alerts.success)  { %>
                    <% alerts.success.forEach(msg => {%>
                        <%= msg %>
                    <% }) %>
                <% }%>
            </div>
                <%- body %>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="createMovie" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form action="/movie/create" method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create movie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                    <label>Title</label>
                        <input class="form-control" type="text" name="title" />
                    </div>
                    <div>
                        <label>poster url</label>
                        <input id="file-input" class="form-control" type="file" name="posterUrl" value="" />
                    </div>
                    <div>
                        <label>Director Name</label>
                        <input class="form-control" type="text" name="directorName" />
                    </div>
                    <div>
                        <label>Actors</label>
                        <input class="form-control" type="text" name="actors" placeholder="Pravin; Ebere;" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>
